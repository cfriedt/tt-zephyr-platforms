config TT_BH_PVT_TEMP
    bool "Support for Tenstorrent Blackhole PVT temperature sensors"
    default y if DT_HAS_TENSTORRENT_BH_PVT_TEMP_ENABLED
    help
      This option enables support for Tenstorrent Blackhole PVT temperature sensors.

if TT_BH_PVT_TEMP

choice
        prompt "Trigger mode"
        default TT_BH_PVT_TEMP_TRIGGER_GLOBAL_THREAD
        help
          Specify the type of triggering to be used by the driver.

config TT_BH_PVT_TEMP_TRIGGER_NONE
        bool "No trigger"

config TT_BH_PVT_TEMP_TRIGGER_GLOBAL_THREAD
        bool "Use global thread"
        select TT_BH_PVT_TEMP_TRIGGER

config TT_BH_PVT_TEMP_TRIGGER_OWN_THREAD
        bool "Use own thread"
        select TT_BH_PVT_TEMP_TRIGGER

endchoice

config TT_BH_PVT_TEMP_TRIGGER
        bool

config TT_BH_PVT_TEMP_THREAD_PRIORITY
        int "Thread priority"
        depends on TT_BH_PVT_TEMP_TRIGGER_OWN_THREAD
        default 10
        help
          Priority of thread used by the driver to handle interrupts.

config TT_BH_PVT_TEMP_THREAD_STACK_SIZE
        int "Thread stack size"
        depends on TT_BH_PVT_TEMP_TRIGGER_OWN_THREAD
        default 1024
        help
          Stack size of thread used by the driver to handle interrupts.

endif
